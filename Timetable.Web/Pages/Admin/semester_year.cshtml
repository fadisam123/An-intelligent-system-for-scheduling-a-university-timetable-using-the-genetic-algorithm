@page
@model Timetable.RazorWeb.Pages.Admin.semester_yearModel
@{
}


<div class="container">
    <div class="main-content">

        <table id="courseTable">
            <thead>
                <tr>
                    <th>عدد السنوات الدراسية</th>
                    <th>عدد الفصول خلال السنة</th>
                </tr>
            </thead>
            <tbody id="courseTableBody">
                <tr>
                    <td>@Model.Years.Count</td>
                    <td>@Model.Semesters.Count</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="sidebar text-center">
        <form method="post">

            <div class="form-group ">
                <label asp-for="@Model.NumOfYearInCollege" class="control-label"></label>
                <input min="1" max="6" asp-for="@Model.NumOfYearInCollege" class="form-control text-center" />
                <span asp-validation-for="@Model.NumOfYearInCollege" class="text-danger"></span>
            </div>

            <div class="form-group ">
                <label asp-for="@Model.NumOfSemesterInYear" class="control-label"></label>
                <input min="1" max="3" asp-for="@Model.NumOfSemesterInYear" class="form-control text-center" />
                <span asp-validation-for="@Model.NumOfSemesterInYear" class="text-danger"></span>
            </div>

            <button class="btn btn-primary" type="submit">حفظ</button>
        </form>
    </div>
</div>

